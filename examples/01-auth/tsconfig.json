{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./app/*"],
      "@plugin/*": ["./plugin/*"],
      "@common/*": ["./common/*"],
      "@artisan/*": ["./artisan/*"],
      "@extends/*": ["./extends/*"]
    },
    "lib": ["es2017", "dom"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["app/**/*", "config/*", "common/**/*", "plugin/**/*", "artisan/**/*", "extends/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
